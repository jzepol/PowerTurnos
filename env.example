# Database - Configura tu conexión a PostgreSQL local
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/nombre_base_datos"

# JWT - Genera secretos seguros para producción
JWT_SECRET="tu-super-secreto-jwt-muy-seguro-y-largo-para-produccion"
JWT_REFRESH_SECRET="tu-super-secreto-refresh-jwt-muy-seguro-y-largo-para-produccion"

# App
NEXTAUTH_SECRET="tu-super-secreto-nextauth-muy-seguro-y-largo-para-produccion"
NEXTAUTH_URL="http://localhost:3000"

# Mercado Pago (opcional para desarrollo)
MP_ACCESS_TOKEN=""
MP_PUBLIC_KEY=""

# Timezone por defecto
DEFAULT_TIMEZONE="America/Argentina/San_Luis"

# Configuración de Logging
LOG_LEVEL="debug"  # debug, info, warn, error
ENABLE_LOGGING="true"  # true para desarrollo, false para producción

